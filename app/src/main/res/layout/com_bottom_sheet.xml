<RelativeLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginTop="30dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/top_part"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/profilePic_com"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/profile_bg"
            android:src="@drawable/baseline_home_work_24"

            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/selectButton_com"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/profilePic_com"
            android:textColor="@color/white"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:layout_marginEnd="40dp"
            android:background="@drawable/login___bg"
            android:text="Select Image"
            android:layout_gravity="center"
            />
    </RelativeLayout>
    <EditText
        android:id="@+id/caption_com"
        android:hint="Enter Caption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/cardbg"
        android:textAlignment="center"
        android:layout_marginHorizontal="10dp"
        android:elevation="10dp"
        android:paddingBottom="2dp"
        android:layout_marginTop="30dp"
        android:layout_below="@id/top_part"
        android:minLines="3"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/upload_com"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_centerVertical="true"
        android:layout_marginTop="10dp"
        android:layout_below="@id/caption_com"
        android:layout_marginHorizontal="50dp"
        android:background="@drawable/login___bg"
        android:layout_marginBottom="30dp"
        android:layout_gravity="center"
        android:text="Upload"/>

</RelativeLayout>